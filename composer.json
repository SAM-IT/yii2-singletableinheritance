{
    "name": "sam-it/yii2-singletableinheritance",
    "description": "Single Table Inheritance for Yii2",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "php": "> 7.3"
    },
    "autoload": {
        "psr-4": {
            "SamIT\\Yii2\\SingleTableInheritance\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamIT\\Yii2\\SingleTableInheritance\\Tests\\": ["tests/"]
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.1"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpcs",
        "lint-fix": "vendor/bin/phpcbf"
    }
}
